<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:FormPanel ui:field="form">
        <g:HTMLPanel addStyleNames="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <label>Title</label>
                    <g:TextBox styleName="form-control" name="title"/>
                </div>
                <div class="form-group">
                    <label>Bundle</label>
                    <g:FileUpload name="bundle" ui:field="file"/>
                    <p class="help-block">Choose bundle to upload</p>
                </div>
                <button class="btn btn-default" type="submit">Submit</button>
            </div>
        </g:HTMLPanel>
    </g:FormPanel>
</ui:UiBinder>