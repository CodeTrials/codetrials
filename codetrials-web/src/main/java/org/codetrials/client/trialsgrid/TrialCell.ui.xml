<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
    <ui:with field="title" type="java.lang.String"/>
    <ui:with field="description" type="java.lang.String"/>
    <div class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3 class="text-center"><ui:text from="{title}"/></h3>
                <p><ui:text from="{description}"/></p>
                <p><a class="btn btn-default btn-block" ui:field="tryButton">Try</a></p>
            </div>
        </div>
    </div>
</ui:UiBinder>